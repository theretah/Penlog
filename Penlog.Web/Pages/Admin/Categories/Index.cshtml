@page
@model Penlog.Pages.Admin.Categories.IndexModel

<h1>Add New Category</h1>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="titleInput" class="form-label">Title: </label>
        <input asp-for="Category.Title" type="text" class="form-control form-control-lg" id="titleInput">
        <span asp-validation-for="Category.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="descriptionInput" class="form-label">Description: </label>
        <textarea asp-for="Category.Description" class="form-control" id="descriptionInput" rows="15">
     </textarea>
        <span asp-validation-for="Category.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-page-handler="Add">Create</button>
</form>
<br />
<hr />

<h1>All Categories</h1>
<div class="container">
    <div class="row">
        @foreach (var category in Model.Categories)
        {
            <div class="card mx-1" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <a class="text-decoration-none text-black" asp-page="Details" asp-route-categoryId="@category.Id">@category.Title</a>
                    </h5>
                    <form method="post" class="d-inline">
                        <button asp-page-handler="Delete" asp-route-categoryId="@category.Id" class="btn btn-danger p-1">Delete</button>
                    </form>
                    <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-secondary p-1">Edit</a>
                </div>
            </div>
        }
    </div>
</div>
