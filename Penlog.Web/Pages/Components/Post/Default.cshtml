@model Penlog.Entities.Post
@inject Microsoft.AspNetCore.Identity.UserManager<AppUser> UserManager
@inject Penlog.Data.Repository.IRepository.IUnitOfWork unit
@using Penlog.Utilities
@using Penlog.ExtensionMethods
@using Penlog.Entities
@{
    string imageBase64Data = string.Empty;
    string imageDataUrl = "default-profile.jpg";

    var date = (Model.LastUpdated == null) ? Model.CreatedDate : Model.LastUpdated;
    var span = DateTimeUtilities.Span(date.Value);

    var previewImageDataUrl = "";
    var previewImage = unit.Images.Find(p => p.Id == Model.PreviewImageId).SingleOrDefault();
    if (previewImage != null)
    {
        previewImageDataUrl = ImageUtilities.GenerateImageDataUrl(previewImage.Bytes);
    }
}
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@previewImageDataUrl" style="width:300px; height:210px;" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a asp-page="Post" asp-route-id="@Model.Id">
                    <h5 class="card-title">@Model.Title</h5>
                </a>
                <p class="card-text">@Html.Raw(Model.Content.ShortenString(30))</p>
                <a asp-page="/Users/Profile" asp-route-id="@Model.AuthorId" class="text-decoration-none text-dark fw-bold">
                    @if (imageDataUrl == "default-profile.jpg")
                    {
                        <img src="~/images/@imageDataUrl" width="30" height="30" style="border-radius:50%;" alt="Alternate Text" />
                    }
                    else
                    {
                        <img src="@imageDataUrl" width="30" height="30" style="border-radius:50%;" alt="Alternate Text" />
                    }
                    <span style="font-size:.85rem;">@Model.Author.UserName</span>
                </a>
                <p class="card-text"><small class="text-muted">Last updated: @span</small></p>
            </div>
        </div>
    </div>
</div>