@inject Microsoft.AspNetCore.Identity.UserManager<Penlog.Model.Entities.AppUser> userManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Penlog</title>

    @*<link href="/Froala/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/Froala/js/froala_editor.pkgd.min.js"></script>*@

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Penlog.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="col-9">
                    <div class="container">
                        <ul class="navbar-nav flex-grow-1">
                            <a class="navbar-brand" asp-area="" asp-page="/Index">Penlog</a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item mx-1">
                                    <a class="nav-link btn text-dark" asp-area="" asp-page="/Posts/Create">Create a Post</a>
                                </li>
                                <li class="nav-item mx-1">
                                    <a class="nav-link btn text-dark" asp-area="" asp-page="/Users/Profile" asp-route-id="@userManager.GetUserAsync(User).Result.Id">Profile</a>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item mx-1">
                                        <a class="nav-link btn text-dark" asp-area="" asp-page="/Admin/Index">Admin</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-3">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">@User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-danger text-dark" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-primary text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Penlog - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/kvyv6ordewdtrveugtpgk2hymloiapt8zom3tbc1v71vtavo/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>