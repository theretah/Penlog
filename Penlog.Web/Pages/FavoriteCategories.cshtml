@page
@model Penlog.Pages.FavoriteCategoriesModel

<p>Please do not select more than 5</p>
<div class="container">
    <div class="row">
        <form method="post">
            <div class="form-check">
                <div class="row">
                    @foreach (var category in Model.Categories)
                    {
                        <div class="col-4">
                            <input class="form-check-input" type="checkbox" name="SelectedCategories" value="@category.Id" id="flexCheckDefault">
                            <label class="form-check-label h5" for="flexCheckDefault">
                                @category.Title
                            </label>
                        </div>
                    }
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>